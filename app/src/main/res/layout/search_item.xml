<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/net.chilltec.tempo"
        android:layout_width="match_parent"
        android:layout_height="56dp">

    <TextView
            android:id="@+id/searchType" android:layout_weight="1"
            android:visibility="invisible" android:layout_width="0dp" android:layout_height="0dp"/>
    <TextView
            android:layout_height="0dp" android:id="@+id/searchID" android:layout_weight="1"
            android:visibility="invisible" android:layout_width="0dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/searchLable" android:layout_weight="1"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/searchArtistLable" android:layout_weight="1"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/searchAlbumLable" android:layout_weight="1"/>
</LinearLayout>
